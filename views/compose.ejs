<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" id="postTitle" type="text" name="postTitle" >
    </div>
    
    <div class="form-group">
     <label for="postTxt">Post</label>
     <textarea class="form-control" id="postTxt"  name="postTxt" ></textarea>
    </div>
    <button class="btn btn-info" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>